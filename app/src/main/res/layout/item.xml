<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category_item"
    style="@style/CategoryItem">


    <ImageView
        android:id="@+id/cat_bg_image"
        style="@style/MainActivityBackgroundImage"
        tools:src="@drawable/national_museum_of_romanian_history"
        android:contentDescription="@string/cd_category_item_bg" />

    <LinearLayout
        style="@style/MainScreenContainer"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cat_item_address"
            style="@style/CategoryItemAddress"
            tools:text="@string/placeholder_address" />

        <TextView
            android:id="@+id/cat_item_title"
            style="@style/CategoryItemTitle"
            tools:text="@string/placeholder_name" />
    </LinearLayout>
        <ImageView
            android:id="@+id/cat_item_arrow"
            style="@style/CategoryItemArrow"
            android:contentDescription="@string/cd_category_item_arr" />


</RelativeLayout>